@model List<Product>

<div class="container bg-black text-white">
    <div class="row pt-4 justify-content-between">
        <div class="col-6 text-center">
            <h2 class="text-primary" style="color: white !important">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="UpsertProduct" class="btn btn-info rounded-pill">
                <i class="fa-solid fa-plus fa-2xl" style="color: #000000;"></i> Create New Product
            </a>
        </div>
    </div>
    <br />
    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Storage
                </th>
                <th>
                    Brand
                </th>
                <th>
                    Color
                </th>
                <th>
                    Price
                </th>
                <th>
                    Discount Price
                </th>
                <th>
                    Category
                </th>
                <th>
                    Edit/Delete
                </th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/product.js"> next</script>
}
