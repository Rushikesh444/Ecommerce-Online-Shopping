@model Company

<form method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100 border-50">

            <div class="col-xl-6">
                <div class="card card-registration my-4">
                    <div class="card-body p-md-5 text-black">
                        <h1 class="mb-5 text-uppercase" style="text-align:center">@(Model.Id != 0 ? "Update" : "Create") Company</h1>
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-outline mb-2">
                            <img src="~/images/Create Company.svg"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; height:500px;" />
                        </div>

                        <div class="form-outline mb-2">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" type="text" id="form3Example8" class="form-control form-control-lg shadow" style="height: 40px;" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" type="text" id="form3Example8" class="form-control form-control-lg shadow" style="height: 40px;" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label asp-for="StreetAddress" class="form-label"></label>
                            <input asp-for="StreetAddress" type="text" id="form3Example8" class="form-control form-control-lg shadow" style="height: 40px;" />
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" type="text" id="form3Example8" class="form-control form-control-lg shadow" style="height: 40px;" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label asp-for="State" class="form-label"></label>
                            <input asp-for="State" type="text" id="form3Example8" class="form-control form-control-lg shadow" style="height: 40px;" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label asp-for="PostalCode" class="form-label"></label>
                            <input asp-for="PostalCode" type="text" id="form3Example8" class="form-control form-control-lg shadow" style="height: 40px;" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end pt-3">

                            <a asp-controller="Company" asp-action="Index" class="btn btn-info btn-md ms-2 rounded-pill"><i class="fa-solid fa-backward fa-xl"></i> Back to List</a>
                            @if (Model.Id != 0)
                            {
                                <button type="submit" class="btn btn-success btn-md ms-2 rounded-pill"><i class="fa-solid fa-check fa-xl" style="color: #ffffff;"></i> Update Company</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success btn-md ms-2 rounded-pill"><i class="fa-solid fa-check fa-xl" style="color: #ffffff;"></i> Add Company</button>
                            }

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}